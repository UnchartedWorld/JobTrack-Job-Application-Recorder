<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Job_Application_Recorder.ViewModels"
             xmlns:dialog="using:Job_Application_Recorder.Services"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Job_Application_Recorder.Views.LandingPageView"
             x:DataType="vm:LandingPageViewModel"
             dialog:DialogService.Register="{Binding}">
  
  <StackPanel HorizontalAlignment="Center">
    <TextBlock Margin="0 10 0 10" FontSize="24" FontWeight="Bold">Welcome to JobTrack</TextBlock>
    <Image Height="200" Width="200" Stretch="UniformToFill" Source="resm:Avalonia.Skia.Assets.NoiseAsset_256X256_PNG.png?assembly=Avalonia.Skia"/>
    <TextBlock Margin="0 10 0 10">Create a new file, or open a previous one</TextBlock>
    <Button Margin="0 10 0 10" HorizontalAlignment="Center" Command="{Binding SaveFileCommand}">Create file</Button> 
    <Button Margin="0 0 0 10" HorizontalAlignment="Center" Command="{Binding SelectFileCommand}">Open file</Button>
  </StackPanel>
</UserControl>
